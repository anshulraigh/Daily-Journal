<%- include("partials/header"); -%>

<div class="container">
  <h2>Edit Your Journal</h2>
  <form action="/posts/<%= post._id %>/edit" method="POST">
    <div class="form-group">
      <label>Title</label>
      <input class="form-control" type="text" name="title" value="<%= post.title %>" required>
    </div>
    <div class="form-group">
      <label>Content</label>
      <textarea class="form-control" name="content" rows="5" required><%= post.content %></textarea>
    </div>
    <div class="form-group">
      <label>Make Public?</label>
      <input type="checkbox" name="isPublic" <%= post.public ? "checked" : "" %>> Yes
    </div>
    <button type="submit" class="btn btn-primary">Save Changes</button>
  </form>
</div>

<%- include("partials/footer"); -%>
