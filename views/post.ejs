<%- include("partials/header"); -%>

<div class="container">
  <h1><%= post.title %></h1>
  <p>By <%= post.author.username %> on <%= new Date(post.createdAt).toLocaleDateString('en-US') %></p>
  <!-- <p>Status: <%= post.public ? "Public" : "Private" %></p> -->

  <div class="post-content">
    <%- post.content %>
  </div>

  <% if (post.author._id.toString() === user._id.toString()) { %>
    <!-- Only show edit and delete options to the post author -->
    <div class="post-actions">
      <form action="/posts/<%= post._id %>/edit" method="GET" style="display: inline;">
        <button type="submit" class="btn btn-primary">Edit</button>
      </form>
      <form action="/posts/<%= post._id %>/delete" method="POST" style="display: inline;">
        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this post?');">Delete</button>
      </form>
    </div>
  <% } %>
</div>

<%- include("partials/footer"); -%>
